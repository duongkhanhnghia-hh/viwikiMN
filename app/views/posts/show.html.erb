<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @post.category_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<br>
<div id="comments">
	<%= render :partial => @post.comments%>	
</div>

<%= form_for [@category, @post, Comment.new] do |f|%>
	<div class="field">
		<%= f.text_area :body, class: "form_control"%>		
	</div>
	<br>		
	<%= f.submit "Add Comment", class: "btn btn-primary"%>
<% end %>

<%= link_to 'Edit', edit_category_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
