<% unless flash.blank? %>
<div id='flash'>
  <% flash.each do |key, value| %>
  <div class='flash alert alert-dismissible fade in alert-<%= key == 'notice' ? 'info' : 'danger' %>'>
    <button type='button' class='close' data-dismiss='alert' aria-label='Close'>
      <span aria-hidden='true'>&times;</span>
    </button>
    <%= value %>
  </div>
  <% end %>
</div>
<% end %>
